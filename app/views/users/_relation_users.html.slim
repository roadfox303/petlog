div.raw.raw_list
  div.title
    h5 #{list_title}
    span … #{list.count} 人
div.raw.users_list
  ul
    - list.each do |user|
      li.hover_box
        = link_to user_path(user), id: "user_#{user.id}" do
          div.left_column
            - if user.avatar && user.avatar.url
              = image_tag (user.avatar.avatar_m.url) if user.avatar && user.avatar.url
            - else
              div.empty_user_avatar
          div.right_column
            h3.user_name #{user.name}
            span.user_comment
              -if user.comment.present?
                i.fas.fa-comment
              = truncate(user.comment, :length => 120)
